<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@drawable/background"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Home">


    <Button
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:text="New Game"
        android:id="@+id/btn_newgame"
        android:layout_gravity="center_horizontal"
        android:onClick="newGame"
        android:background="@drawable/button_img"
        android:layout_marginTop="60dp" />
    <Button
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:text="Manage Players"
        android:background="@drawable/button_img"
        android:id="@+id/btn_manageplayers"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:onClick="managePlayers" />
    <Button
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:text="Statistics"
        android:id="@+id/btn_statistics"
        android:onClick="statistics"
        android:background="@drawable/button_img"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp" />
</LinearLayout>
