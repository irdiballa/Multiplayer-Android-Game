<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/background"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.irdi.seniorproject.Challenge">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">
        <TextView android:id="@+id/challenge_player1name"
            android:layout_width="100dp"
            android:text=""
            android:gravity="center"
            android:textSize="20dp"
            android:layout_height="fill_parent" />

        <TextView android:id="@+id/challenge_player1score"
            android:layout_width="40dp"
            android:text=""
            android:gravity="center"
            android:layout_height="fill_parent" />

        <TextView android:id="@+id/vs"
            android:layout_width="wrap_content"
            android:text="-"
            android:gravity="center"
            android:textSize="20dp"
            android:layout_height="fill_parent" />

        <TextView android:id="@+id/challenge_player2score"
            android:layout_width="40dp"
            android:text=""
            android:gravity="center"
            android:layout_height="fill_parent" />

        <TextView android:id="@+id/challenge_player2name"
            android:layout_width="100dp"
            android:text=""
            android:textSize="20dp"
            android:gravity="center"
            android:layout_height="fill_parent" />

        </LinearLayout>
    <Button
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:text="TIC TAC TOE"
        android:id="@+id/btn_ttt"
        android:background="@drawable/button_img"
        android:layout_gravity="center_horizontal"
        android:onClick="startTickTackToe"
        android:layout_marginTop="30dp" />
    <Button
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:text="DICE GAME"
        android:id="@+id/btn_dice"
        android:background="@drawable/button_img"
        android:layout_gravity="center_horizontal"
        android:onClick="startDiceGame"
        android:layout_marginTop="30dp" />
    <Button
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:text="COMING SOON"
        android:id="@+id/btn_game3"
        android:background="@drawable/button_img"
        android:layout_gravity="center_horizontal"
        android:onClick="startComingSoon"
        android:layout_marginTop="30dp" />
    <Button
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:text="COMING SOON"
        android:id="@+id/btn_game4"
        android:background="@drawable/button_img"
        android:layout_gravity="center_horizontal"
        android:onClick="startComingSoon"
        android:layout_marginTop="30dp" />

</LinearLayout>
    </ScrollView>